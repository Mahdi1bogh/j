{% extends 'base1.html.twig' %}


{% block title %}Match1 index{% endblock %}

{% block title1 %}
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center justify-content-center">
        <div class="container" data-aos="fade-up">

            <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
                <div class="col-xl-6 col-lg-8">
                    <h1>Liste des matches<span>.</span></h1>

                </div>
            </div>



        </div>
    </section><!-- End Hero -->
{% endblock %}

{% block body %}


    <div class="nk-gap-2"></div>
    <h3 class="nk-decorated-h-2"><span><span class="text-main-1">Latest Matches</span> Matches</span></h3>
    {% for match1 in match1s %}
    <div class="nk-gap"></div>
    <div class="nk-match">

        <div class="nk-match-team-left">

            <a href="#">

                        <span class="nk-match-team-logo">
                            <img src="assets/images/team-1.jpg" alt="">
                        </span>
                <span class="nk-match-team-name">
                           {{ match1.nomEquipe1 }}
                        </span>
            </a>
        </div>
        <div class="nk-match-status">
            <a href="{{ path('app_match1_front_show', {'id_match1': match1.idMatch1}) }}">
                <span class="nk-match-status-vs">VS</span>
                <span class="nk-match-status-date">{{ match1.dateMatch1 }}</span>
                <span class="nk-match-score bg-danger">{{ match1.resultatMatch1 }}</span>
            </a>
        </div>
        <div class="nk-match-team-right">
            <a href="#">
                        <span class="nk-match-team-name">
                           {{ match1.nomEquipe2 }}
                        </span>
                <span class="nk-match-team-logo">
                            <img src="assets/images/team-2.jpg" alt="">
                        </span>
            </a>
        </div>
    </div>
    {% endfor %}

{% endblock %}
