{% extends 'base_molka.html.twig' %}

{% block title %}Les Commandes {% endblock %}

{% block tableau %}

    <h2 style="color:#0000FF"> <strong> La liste des commandes des membres  </strong>
        <a href="{{ path('app_admin_commande_index') }}" class="btn btn-outline-info" >Pour plus de détails & informations</a>
    </h2>
    <br>

    <br>
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">
            {% for commande in commandes %}
                <div class="row">
                    <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content" data-aos="fade-right" data-aos-delay="100">
                        <h3>Commande numero {{ commande.idCommande }}</h3>
                        <p class="fst-italic">
                            Commandé par {{ commande.idUser.nomUser }}: <strong>{{ commande.etat }}</strong>
                        </p>
                        <p class="fst-italic">
                            Email membre: <strong>{{ commande.idUser.emailUser }}</strong>
                        </p>

                        <p class="fst-italic float-right">
                            <strong>{{ commande.adresse }}</strong> in {{commande.dateCommande|date}}
                        </p>

                    </div>
                </div>

                <hr>
            {% endfor %}

            <br>
            <div class="row">
                {{ pagerfanta(commandes) }}
            </div>


        </div>
    </section><!-- End About Section -->

{% endblock %}
