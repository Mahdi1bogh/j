    <table class="table">
        <thead>
            <tr>
                <th>Referance de produit</th>
                <th>Nom produit</th>
                <th>Nb pts</th>
                <th>Image</th>
                <th>Categorie</th>
                <th>Quantite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idProduit }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.nbPts }}</td>
                {%if produit.image%}
                <td><img src="{{vich_uploader_asset(produit,'imageFile')}} " width="90" height="90"></td>
                {%endif%}
                <td>{{ produit.idCategorie}}</td>
                <td>{{ produit.quantite }}</td>
                <td>
                    <a href="{{ path('app_produits_delete', {'id_produit': produit.idProduit}) }}"class="btn btn-danger">Supprimer</a>
                    <a href="{{ path('app_produits_edit', {'id_produit': produit.idProduit}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produits_new') }}">Ajouter un nouveau produit</a>
