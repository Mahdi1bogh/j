{{form_start(form,{'attr':{'class':'form-group'}})}}
<div class="form-group">
    {{ form_label(form.nom_user,"Nom") }}
    {{ form_widget(form.nom_user) }}
    <div class="invalid-feedback">
        votre nom?
    </div>
</div>
<div class="form-group">
    {{ form_label(form.prenom_user,"Prenom") }}
    {{ form_widget(form.prenom_user) }}
</div>
<div class="form-group">
    {{ form_label(form.tel_user,"Num Tel") }}
    {{ form_widget(form.tel_user) }}
</div>
<div class="form-group">
    {{ form_label(form.email_user,"Adresse mail") }}
    {{ form_widget(form.email_user) }}
    <div class="invalid-feedback">
        adresse mail non valid
    </div>
</div>
<div class="form-group">

    {{ form_label(form.mdp_user,"Mot de passe") }}
    {{ form_widget(form.mdp_user) }}

    <div class="invalid-feedback">
        mot de passe requis
    </div>
</div>
<div class="form-group">
    {{ form_label(form.pdp,"Photo de profil") }}
    {{ form_widget(form.pdp) }}
</div>

<div class="form-group m-0">
    <button type="submit" class="btn btn-primary btn-block">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
